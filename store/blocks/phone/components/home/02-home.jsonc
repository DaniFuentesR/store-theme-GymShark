{
    "flex-layout.row#home__section-2--info": {
        "title": "Section two, info div",
        "children": [
            "rich-text#home__section2--info",
            "link#home__viewall--sectiontwo"

        ],

        "props": {
            "blockClass": "home__section2--info"

        }
    },
    
    
    "flex-layout.row#phone__home__section-2": {
        "title": "Section two, scroll products",
        "children": [
            "list-context.product-list#section-2"
            
        ]
        
    },

    "list-context.product-list#section-2": {
        
        "blocks": ["product-summary.shelf#section-2"],
        "children": ["slider-layout#demo-products"]
    },

    "product-summary.shelf#section-2":{
        "children": [
            // "stack-layout#prodsum",
            "product-summary-name",
            "product-summary-image",
            "product-rating-inline",
            "product-summary-space",
            "product-summary-price",
            "add-to-cart-button"
          ]
    },

    "slider-layout#demo-products": {
           "props": {
            "itemsPerPage": {
            "desktop": 5,
            "tablet": 2,
            "phone": 2
          },
        //   "infinite": true,
          "showNavigationArrows": "desktopOnly",
          "blockClass": "carousel"
        }

    },
   

   

    // ---------------- Declaración de "rich-text#home__section2--info" --------------------
            

