        "title": "Info section two",

        "props": {
            "blockClass":"home__section2--richtext",
            "text": "20% OFF* TRAINING ESSENTIALS"
        }
    },

    "link#home__viewall--sectiontwo":{
        "title": "link view all",
        "props":{
            "blockClass":"home__viewall--sectiontwo",
            "href": "https://ca.gymshark.com/collections/training-essentials/womens?banner_id=hp-training-essentials-dual-cta1",
            "label": "View All"
        }
    }


